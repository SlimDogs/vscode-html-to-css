{
	"name": "vscode-html-to-css",
	"displayName": "Html to css/less/sass",
	"description": "Copy HTML dom structure and paste it as css/less/sass selector syntax",
	"version": "1.1.6",
	"publisher": "tautvydasderzinskas",
	"icon": "images/html2css_transparent.png",
	"author": {
		"name": "Tautvydas Derzinskas",
		"email": "tautvydasuk@gmail.com",
		"url": "https://www.tautvydas.info"
	},
	"galleryBanner": {
		"color": "#313944",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SlimDogs/vscode-html-to-css.git"
	},
	"bugs": {
		"url": "https://github.com/SlimDogs/vscode-html-to-css/issues",
		"email": "tautvydasuk+vscode@gmail.com"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.25.0"
	},
	"categories": [
		"Other",
		"Formatters"
	],
	"activationEvents": [
		"onCommand:htmlToCss.paste"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "htmlToCss.paste",
				"title": "Convert html to Css/Less/Sass"
			}
		],
		"keybindings": [
			{
				"command": "htmlToCss.paste",
				"key": "ctrl+alt+v",
				"mac": "cmd+alt+v",
				"when": "editorTextFocus && !editorReadOnly"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Html to Css/Less/Sass configuration",
			"properties": {
				"htmlToCss.hideTags": {
					"type": "boolean",
					"default": true,
					"description": "Hide tag selector if element has class or id."
				},
				"htmlToCss.convertBEM": {
					"type": "boolean",
					"default": true,
					"description": "Recognize BEM classes and split them accordingly."
				},
				"htmlToCss.preappendHtml": {
					"type": "boolean",
					"default": false,
					"description": "Pre-append comment containing transformed html structure."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
		"semantic-release": "semantic-release",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/jsdom": "^12.2.3",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.11.3",
		"@semantic-release/changelog": "^3.0.2",
		"@semantic-release/git": "^7.0.8",
		"@semantic-release/github": "^5.2.10",
		"commitizen": "^4.0.0",
		"cz-customizable": "^6.0.0",
		"husky": "^3.0.0",
		"semantic-release": "^15.13.3",
		"semantic-release-vsce": "^2.2.6",
		"tslint": "^5.14.0",
		"typescript": "^3.3.3333",
		"vscode": "^1.1.30"
	},
	"dependencies": {
		"jsdom": "^15.0.0"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": "config/cz-customizable/base.js"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"greenkeeper": {
		"ignore": [
		  "@types/node"
		]
	},
	"release": {
		"verifyConditions": [
			"semantic-release-vsce",
			"@semantic-release/github"
		],
		"prepare": [
			{
				"path": "@semantic-release/changelog",
				"changelogFile": "CHANGELOG.md"
			},
			"@semantic-release/git",
			{
				"path": "semantic-release-vsce",
				"packageVsix": "vscode-html-to-css.vsix"
			}
		],
		"publish": [
			"semantic-release-vsce",
			{
				"path": "@semantic-release/github",
				"assets": "vscode-html-to-css.vsix"
			}
		]
	}
}

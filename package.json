{
	"name": "vscode-html-to-css",
	"displayName": "Html to css/less/sass",
	"description": "Copy HTML dom structure and paste it as css/less/sass selector syntax",
	"version": "1.0.0",
	"publisher": "Tautvydas Derzinskas",
	"author": {
		"name": "Tautvydas Derzinskas",
		"email": "tautvydasuk@gmail.com",
		"url": "https://www.tautvydas.info"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SlimDogs/vscode-html-to-css.git"
	},
	"bugs": {
		"url": "https://github.com/SlimDogs/vscode-html-to-css/issues",
		"email": "tautvydasuk+vscode@gmail.com"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.25.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.htmlToCss"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.htmlToCss",
				"title": "Convert html to Css/Less/Sass"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^11.11.3",
		"@types/jsdom": "^12.2.1",
		"@types/mocha": "^2.2.42",
		"cz-customizable": "^5.3.0",
		"commitizen": "^3.0.6",
		"husky": "^1.3.1",
		"tslint": "^5.14.0",
		"typescript": "^3.3.3333",
		"vscode": "^1.1.30"
	},
	"dependencies": {
		"jsdom": "^13.1.0"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": "config/cz-customizable/base.js"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	}
}
